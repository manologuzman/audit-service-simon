generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Geolocation {
  id        String   @id @default(uuid())
  deviceId  String
  lat       Float
  lng       Float
  timestamp DateTime
}

model Routing {
  id             String         @id @default(uuid())
  deviceId       String
  originLat      Float
  originLng      Float
  destinationLat Float
  destinationLng Float
  status         String
  cacheTTL       Int
  timestamp      DateTime       @default(now())
  route          RoutingPoint[] // Relaci√≥n con los puntos de la ruta
}

model RoutingPoint {
  id        String   @id @default(uuid())
  lat       Float
  lng       Float
  routingId String
  routing   Routing @relation(fields: [routingId], references: [id], onDelete: Cascade)
}

model Alert {
  id        String   @id @default(uuid())
  type      String
  message   String
  source    String
  deviceId  String
  timestamp DateTime @default(now())
}
